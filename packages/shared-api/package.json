{
  "name": "@fullstack-starter/shared-api",
  "version": "1.0.0",
  "description": "Shared typed API client functions",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    }
  },
  "scripts": {
    "build": "pnpm run clean && tsc",
    "dev": "tsc -w",
    "typecheck": "tsc --noEmit",
    "lint": "pnpm exec eslint .",
    "check": "pnpm run lint && pnpm run typecheck",
    "clean": "rimraf dist"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "src",
    "index.ts"
  ],
  "dependencies": {
    "@fullstack-starter/shared-schemas": "workspace:*"
  },
  "devDependencies": {
    "typescript": "~5.8.2"
  }
}