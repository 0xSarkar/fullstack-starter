{
  "extends": "fastify-tsconfig",
  "compilerOptions": {
    "strict": true,
    "outDir": "dist",
    "rootDir": "src",
    "sourceMap": true,
    "moduleResolution": "NodeNext",
    "module": "NodeNext",
    "target": "ES2022",
    "esModuleInterop": true,
    "noUncheckedIndexedAccess": true
  },
  "include": [
    "src/**/*.ts"
  ],
  "exclude": [
    "dist",
    "scripts",
    "db/seeds"
  ]
}